algoritmo "Fibonacci"
var
   fibAnterior, fibAtual, fibProximo, posicao: inteiro

inicio
   fibAnterior <- 0
   fibAtual <- 1

   escreval("  0ยบ   : fib", fibAnterior, "  ->verdadeiro")
   escreval("  1ยบ   : fib", fibAtual, "  ->verdadeiro")

   para posicao de 2 ate 12 faca
      fibProximo <- fibAnterior + fibAtual
      escreval(" ", posicao,"ยบ  : fib", fibProximo," ->verdadeiro")
      fibAnterior<-fibAtual
      fibAtual <- fibProximo

   fimPara
fimAlgoritmo


