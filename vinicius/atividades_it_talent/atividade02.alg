algoritmo "Calculadora simples"

var
    numero1, numero2, soma: Inteiro
inicio
    escreval("Informe um número:")
    leia(numero1)
    escreval("Informe outro número:")
    leia(numero2)
    soma <- numero1 + numero2
    escreva("O  Resultado da soma ", numero1, " e ", numero2, " é igual a : ", Soma)
fimalgoritmo