algoritmo "Salario Funcionario"
var

nome: caractere
salario: real

inicio

escreval ("Qual é o seu nome?")
leia(nome)
escreval ("Qual é valor do seu salário?")
leia(salario)
escreval ("Nome do(a) funcionário(a): ", nome)
escreval ("Salário:", salario)
escreval ("O(A) funcionário(a)",nome,"tem um salário de",salario,".")

fimalgoritmo