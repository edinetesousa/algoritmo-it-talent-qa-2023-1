Algoritmo "7.1.Estruturas-Condicionais-par-ou-impar"
// Autor(a)    : Yuri Carvalho Teixeira
// Data atual  : 27/05/2023
Var
   num: inteiro


Inicio
   escreval("Informe o numero para saber se é par ou impar:")
   leia(num)
   se(num % 2 = 0) entao
      escreva("O numero ", num, " e par")
   senão
      escreva("O numero ", num, " e impar")
   fimse

Fimalgoritmo