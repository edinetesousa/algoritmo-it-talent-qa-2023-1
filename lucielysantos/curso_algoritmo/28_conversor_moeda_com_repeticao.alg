algoritmo "Conversor de moeda"

var

contador, quant : inteiro
reais, dolar : real

inicio
contador <- 1
escreval("Quantas vezes você quer converter?")
leia(quant)
enquanto (contador <= quant) faca
    escreval("Quantos reais deseja converter?")
    leia(reais)
    dolar <- reias/5
    escreval("O valor convertido é US$ "+dolar)
    contador <- contador + 1
fimenquanto


fimalgoritmo